{
  "name": "leaction",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc --noEmit && NODE_ENV=production vite build",
    "serve": "(cd functions/ && tsc) && firebase serve",
    "watch": "vite build --watch",
    "test": "jest",
    "format": "eslint -c .eslintrc.json --fix src/**/*.{ts,tsx}",
    "emulate": "yarn build_function_for_emulator && yarn build_for_emulator && firebase emulators:start & yarn watch",
    "build_for_emulator": "tsc --noEmit && vite build --mode emulator",
    "build_function_for_emulator": "(cd functions/ && npm run build)",
    "deploy": "firebase deploy"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-solid": "^0.7.0",
    "firebase": "^9.14.0",
    "firebase-tools": "^11.16.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "solid-testing-library": "^0.3.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-solid": "^2.2.6"
  },
  "dependencies": {
    "@babel/preset-env": "^7.18.10",
    "@solidjs/router": "^0.4.2",
    "@suid/icons-material": "^0.2.4",
    "@suid/material": "^0.4.2",
    "solid-dnd-directive": "^0.2.0",
    "solid-firebase": "^0.1.6",
    "solid-js": "^1.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json",
        "babelConfig": {
          "presets": [
            "babel-preset-solid",
            "@babel/preset-env"
          ]
        }
      }
    },
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "solid-js/web": "<rootDir>/node_modules/solid-js/web/dist/web.cjs",
      "solid-js": "<rootDir>/node_modules/solid-js/dist/solid.cjs"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "regenerator-runtime"
    ]
  }
}
